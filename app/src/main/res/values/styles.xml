<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionBox">
        <item name="android:background">@color/colorQuestion</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/margin_wide</item>
        <item name="android:layout_marginEnd">@dimen/margin_wide</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/grey_button_color</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="JokerButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorJokerButton</item>
        <item name="colorControlHighlight">@color/colorJokerButtonPressed</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="JokerButtonResolved" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_button_color</item>
        <item name="colorControlHighlight">@color/grey_button_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/grey_button_color</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_marginStart">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="header_text">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

</resources>